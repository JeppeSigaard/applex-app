<?xml version='1.0' encoding='utf-8'?>
<widget id="com.applex.smamo.applex" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Atlex</name>
    <description>
        Native application for SDU Odense
    </description>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="true" />   
    <allow-navigation href="*youtube*" />
    <allow-navigation href="*ytimg*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
    <preference name="BackupWebStorage" value="local" />
    <author email="hej@smartmonkey.dk" href="http://smartmonkey.dk">
        SmartMonkey
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <icon density="ldpi" src="res/icons/ldpi.png" />
        <icon density="mdpi" src="res/icons/mdpi.png" />
        <icon density="hdpi" src="res/icons/hdpi.png" />
        <icon density="xhdpi" src="res/icons/xhdpi.png" />
        <icon density="xxhdpi" src="res/icons/xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icons/xxxhdpi.png" />
        <splash src="res/splash/Default@2x~universal~anyany.png" />
    </platform>
    <platform name="ios">
        <icon height="180" src="res/icons/icon-60@3x.png" width="180" />
        <icon height="60" src="res/icons/icon-60.png" width="60" />
        <icon height="120" src="res/icons/icon-60@2x.png" width="120" />
        <icon height="76" src="res/icons/icon-76.png" width="76" />
        <icon height="152" src="res/icons/icon-76@2x.png" width="152" />
        <icon height="40" src="res/icons/icon-40.png" width="40" />
        <icon height="80" src="res/icons/icon-40@2x.png" width="80" />
        <icon height="57" src="res/icons/icon.png" width="57" />
        <icon height="114" src="res/icons/icon@2x.png" width="114" />
        <icon height="72" src="res/icons/icon-72.png" width="72" />
        <icon height="144" src="res/icons/icon-72@2x.png" width="144" />
        <icon height="29" src="res/icons/icon-small.png" width="29" />
        <icon height="58" src="res/icons/icon-small@2x.png" width="58" />
        <icon height="50" src="res/icons/icon-50.png" width="50" />
        <icon height="100" src="res/icons/icon-50@2x.png" width="100" />
        <icon height="167" src="res/icons/icon-83.5@2x.png" width="167" />
        <splash src="res/splash/Default@2x~universal~anyany.png" />
    </platform>
    <plugin name="ionic-plugin-keyboard" spec="~2.2.1" />
    <plugin name="cordova-plugin-media-capture" source="npm" spec="*">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="Atlex skal bruge adgang til dit kamera for at tage et billede." />
        <variable name="MICROPHONE_USAGE_DESCRIPTION" value="Atlex skal bruge adgang til din mikrofon for at optage video." />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Atlex skal bruge adgang til dit bibliotek for at vÃ¦lge billeder og video derfra." />
    </plugin>
</widget>
